@inherits LayoutComponentBase

<LearnovaDefaultTheme @ref=theme ></LearnovaDefaultTheme>
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudLayout>
    <MudAppBar Elevation="1">
        <MudImage Src="favicon.ico" Height="40" Width="40" ObjectFit="ObjectFit.ScaleDown"></MudImage>
        <MudSpacer/>
        <MudIconButton OnClick="@theme.ToggleDarkMode" Icon="@(DarkLightModeButtonIcon)" Color="Color.Inherit"/>
    </MudAppBar>
    <MudDrawer id="nav-drawer" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true" @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        @Body
        <MudText></MudText>
    </MudMainContent>
</MudLayout>


<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code{ 
    private bool _drawerOpen = false;
    private LearnovaDefaultTheme theme= new LearnovaDefaultTheme();


    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    

    public string DarkLightModeButtonIcon => theme.isDarkMode() switch
    {
        true => Icons.Material.Rounded.LightMode,
        false => Icons.Material.Outlined.DarkMode,
    };
}


