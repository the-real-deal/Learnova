@page "/ProfessorsTimesheet"
@using Learnova.Context
@using Learnova.Entities

<MudTable Items="lezione">
    <HeaderContent>
        <MudTh>Ora</MudTh>
        <MudTh>Lunedì</MudTh>
        <MudTh>Martedì</MudTh>
        <MudTh>Mercoldì</MudTh>
        <MudTh>Giovedì</MudTh>
        <MudTh>Venerdì</MudTh>
        <MudTh>Sabato</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Ora">@lezione.IndexOf(context)</MudTd>
        <MudTd DataLabel="Lunedì">tggg</MudTd>
        <MudTd DataLabel="Martedì">tggg</MudTd>
        <MudTd DataLabel="Mercoledì">tgg</MudTd>
        <MudTd DataLabel="Giovedì">tggg</MudTd>
        <MudTd DataLabel="Venerdì">tggg</MudTd>
        <MudTd DataLabel="Sabato">tggg</MudTd>
    </RowTemplate>
</MudTable>

@code
{
    public List<LezioniProgrammate> lezione { get; set; }
    protected override void OnInitialized()
    {
        MyDbContext dbContext = new MyDbContext();
        lezione = dbContext.LezioniProgrammates.ToList();
    }
}
