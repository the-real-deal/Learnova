        <MudContainer Class="d-flex  gap-2 flex-row">
            <MudPaper Class="pa-4 align-self-start" Elevation="1">
                <MudText Class="vh-100 " Typo="Typo.h4">Learnova</MudText>
            </MudPaper>
            <MudCard>
                <MudCardHeader >
                    <CardHeaderAvatar>
                        <MudAvatar>
                            <MudIcon Icon="@Icons.Material.Filled.Person"></MudIcon>
                        </MudAvatar>
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText>Login Utente</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudTextField T="string" Label="Email"></MudTextField>
                    <MudTextField T="string" Label="Password" InputType="InputType.Password"></MudTextField>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Color="Color.Primary" ButtonType="ButtonType.Submit">Login</MudButton>
                </MudCardActions>
            </MudCard>
            
        </MudContainer>

    </MudPaper>
</MudContainer>

    

